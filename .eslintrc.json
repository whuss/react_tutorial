{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "react-app",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "simple-import-sort"
    ],
    "rules": {
        "prettier/prettier": "warn"
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "17.0.1"
        }
    }
}